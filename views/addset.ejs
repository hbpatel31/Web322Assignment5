<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Add Set</title>
  <link rel="stylesheet" href="/css/main.css" />
  <link rel="stylesheet" href="/css/tailwind.css" />
</head>

<body tabindex="-1">

  <%- include('partials/navbar',{page: ''}) %>
  <div class="hero bg-base-200 rounded-lg p-6"> 
    <h1 class="text-5xl font-bold">Add New Set</h1>
</div>
<div class="hero bg-base-200 rounded-lg p-6">
<div>
    <form action="/lego/addSet" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" required><br><br>
    
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" required><br><br>
    
        <label for="num_parts">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" required><br><br>
    
        <label for="img_url">Image URL:</label>
        <input type="url" id="img_url" name="img_url" required><br><br>
    
        <label for="theme_id">Theme:</label>
        <select id="theme_id" name="theme_id" required>
          <% themes.forEach(theme => { %>
            <option value="<%= theme.id %>"><%= theme.name %></option>
          <% }) %>
        </select><br><br>
    
        <label for="set_num">Set Number:</label>
        <input type="text" id="set_num" name="set_num" required>
        <br><br>
        <button class="btn btn-primary" type="submit">Add Set</button>
      </form>
</div>
</div>
    
  

</html>