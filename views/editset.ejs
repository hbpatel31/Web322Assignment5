<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Edit Set - <%= set.name %></title>
    <link rel="stylesheet" href="/css/main.css" />
  </head>

<body tabindex="-1">

  <%- include('partials/navbar',{page: ''}) %>
  <div class="hero bg-base-200 rounded-lg p-6"> 
        <h1 class="text-5xl font-bold mb-4">Edit Existing Set - <%= set.name %></h1>
  </div>
<div class="hero bg-base-200 rounded-lg p-6">
<div>
    <form action="/lego/editSet" method="POST">
        <label for="name">Name:</label>
        <input type="text" id="name" name="name" value="<%= set.name %>" required class="border p-2 mb-4"><br><br>
  
        <label for="year">Year:</label>
        <input type="number" id="year" name="year" value="<%= set.year %>" required class="border p-2 mb-4"><br><br>
  
        <label for="num_parts">Number of Parts:</label>
        <input type="number" id="num_parts" name="num_parts" value="<%= set.num_parts %>" required class="border p-2 mb-4"><br><br>
  
        <label for="img_url">Image URL:</label>
        <input type="url" id="img_url" name="img_url" value="<%= set.img_url %>" class="border p-2 mb-4"><br><br>
  
        <label for="theme_id">Theme:</label>
        <select id="theme_id" name="theme_id" required class="border p-2 mb-4">
          <% themes.forEach(theme => { %>
            <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
              <%= theme.name %>
            </option>
          <% }) %>
        </select><br><br>
  
        <label for="set_num">Set Number:</label>
        <input type="text" id="set_num" name="set_num" value="<%= set.set_num %>" readonly class="border p-2 mb-4 cursor-not-allowed"><br><br>
  
        <button type="submit" class="btn btn-primary">Update Set</button>
      </form>
      <br>

      <a href="/lego/deleteSet/<%= set.set_num %>" class="mt-10 btn btn-primary">Delete Set</a>
</div>
</div>
    
  
